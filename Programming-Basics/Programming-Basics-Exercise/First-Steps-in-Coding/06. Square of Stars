using System;

namespace SquareOfStars
{
    class Program
    {
        static void Main(string[] args)
        {
            int size = int.Parse(Console.ReadLine());
            for (int i = 0; i < size; i++)
            {
                Console.Write('*');
            }
            Console.WriteLine();
            for (int i = 0; i < size - 2; i++)
            {
                Console.WriteLine('*' + new string(' ',size - 2)+ '*');
            }
            for (int i = 0; i < size; i++)
            {
                Console.Write('*');
            }
            Console.WriteLine();
        }
    }
}
