<?php

    $input = intval(readline());
    signOfInteger($input);
    function signOfInteger($input)
    {
        if ($input > 0) {
            $result = "The number $input is positive.";
        }
        else if ($input < 0) {
            $result = "The number $input is negative.";
        }
        else {
            $result = "The number $input is zero.";
        }
        echo $result;
    }
